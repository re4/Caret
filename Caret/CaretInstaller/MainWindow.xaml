<Window x:Class="CaretInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Caret Setup"
        Width="560" Height="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1177BB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0D5689"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#3C3C3C"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4C4C4C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBorder" Width="18" Height="18"
                                    Background="#2D2D2D" BorderBrush="#555555"
                                    BorderThickness="1" CornerRadius="3"
                                    VerticalAlignment="Center" Margin="0,0,8,0">
                                <TextBlock x:Name="checkMark" Text="✓"
                                           Foreground="#007ACC" FontSize="13" FontWeight="Bold"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F3F"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="#E0E0E0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- PAGE: Welcome -->
        <Grid x:Name="WelcomePage" Grid.Row="0" Margin="40,20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Width="64" Height="64" CornerRadius="12" Background="#252526"
                        HorizontalAlignment="Center" Margin="0,0,0,12">
                    <TextBlock Text="C" FontSize="36" FontWeight="Bold" Foreground="#007ACC"
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Consolas"/>
                </Border>
                <TextBlock Text="Caret" FontSize="28" FontWeight="SemiBold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBlock x:Name="VersionLabel" FontSize="13" Foreground="#888888"
                           HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <TextBlock Text="Welcome to the Caret Setup Wizard." FontSize="14" Foreground="#CCCCCC"
                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                <TextBlock Text="This will install Caret on your computer." FontSize="13" Foreground="#999999"
                           HorizontalAlignment="Center" Margin="0,8,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                <TextBlock Text="Click Next to continue." FontSize="12" Foreground="#666666"
                           HorizontalAlignment="Center" Margin="0,24,0,0"/>
            </StackPanel>
        </Grid>

        <!-- PAGE: Options -->
        <Grid x:Name="OptionsPage" Grid.Row="0" Margin="40,24" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Top">
                <TextBlock Text="Installation Options" FontSize="20" FontWeight="SemiBold" Foreground="White"
                           Margin="0,0,0,28"/>
                <TextBlock Text="Install location:" FontSize="13" Foreground="#CCCCCC" Margin="0,0,0,6"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="InstallPathTextBox" Grid.Column="0" VerticalContentAlignment="Center"/>
                    <Button x:Name="BrowseButton" Content="Browse..." Grid.Column="1"
                            Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"
                            Click="BrowseButton_Click"/>
                </Grid>

                <TextBlock Text="Options:" FontSize="13" Foreground="#CCCCCC" Margin="0,28,0,8"/>
                <CheckBox x:Name="DesktopIconCheckBox" Content="Create desktop shortcut" IsChecked="True"/>
                <CheckBox x:Name="ContextMenuCheckBox" IsChecked="True">
                    <TextBlock TextWrapping="Wrap" Foreground="#E0E0E0">
                        Add "Edit with Caret" to Windows right-click context menu
                    </TextBlock>
                </CheckBox>
            </StackPanel>
        </Grid>

        <!-- PAGE: Installing -->
        <Grid x:Name="InstallingPage" Grid.Row="0" Margin="40,24" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Installing Caret..." FontSize="20" FontWeight="SemiBold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,0,0,32"/>
                <ProgressBar x:Name="InstallProgressBar" Maximum="100" Value="0" Height="8"
                             Background="#333333" Foreground="#007ACC" BorderThickness="0"
                             Margin="0,0,0,16"/>
                <TextBlock x:Name="InstallStatusText" Text="Preparing..." FontSize="13" Foreground="#999999"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="InstallPercentText" Text="0%" FontSize="12" Foreground="#666666"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <!-- PAGE: Complete -->
        <Grid x:Name="CompletePage" Grid.Row="0" Margin="40,24" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="✓" FontSize="52" Foreground="#4EC9B0"
                           HorizontalAlignment="Center" Margin="0,0,0,8" FontFamily="Segoe UI"/>
                <TextBlock Text="Installation Complete!" FontSize="22" FontWeight="SemiBold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Caret has been successfully installed." FontSize="13" Foreground="#999999"
                           HorizontalAlignment="Center" Margin="0,0,0,28"/>
                <CheckBox x:Name="LaunchCheckBox" Content="Launch Caret" IsChecked="True"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- PAGE: Uninstall Confirm -->
        <Grid x:Name="UninstallPage" Grid.Row="0" Margin="40,24" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border Width="64" Height="64" CornerRadius="12" Background="#252526"
                        HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock Text="C" FontSize="36" FontWeight="Bold" Foreground="#007ACC"
                               HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Consolas"/>
                </Border>
                <TextBlock Text="Uninstall Caret" FontSize="22" FontWeight="SemiBold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="This will remove Caret from your computer." FontSize="14" Foreground="#CCCCCC"
                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Your settings and session data will not be removed." FontSize="13"
                           Foreground="#999999" HorizontalAlignment="Center" TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- PAGE: Uninstall Progress -->
        <Grid x:Name="UninstallProgressPage" Grid.Row="0" Margin="40,24" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Uninstalling Caret..." FontSize="20" FontWeight="SemiBold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,0,0,32"/>
                <ProgressBar x:Name="UninstallProgressBar" Maximum="100" Value="0" Height="8"
                             Background="#333333" Foreground="#007ACC" BorderThickness="0"
                             Margin="0,0,0,16"/>
                <TextBlock x:Name="UninstallStatusText" Text="Preparing..." FontSize="13" Foreground="#999999"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="UninstallPercentText" Text="0%" FontSize="12" Foreground="#666666"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>

        <!-- PAGE: Uninstall Complete -->
        <Grid x:Name="UninstallCompletePage" Grid.Row="0" Margin="40,24" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="✓" FontSize="52" Foreground="#4EC9B0"
                           HorizontalAlignment="Center" Margin="0,0,0,8" FontFamily="Segoe UI"/>
                <TextBlock Text="Uninstallation Complete" FontSize="22" FontWeight="SemiBold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Caret has been removed from your computer." FontSize="13" Foreground="#999999"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Button Bar -->
        <Border Grid.Row="1" Background="#252526" Padding="16,12">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="BackButton" Content="‹ Back" Style="{StaticResource SecondaryButton}"
                            Click="BackButton_Click" Visibility="Collapsed"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="NextButton" Content="Next ›" Style="{StaticResource PrimaryButton}"
                            Click="NextButton_Click" Margin="0,0,8,0"/>
                    <Button x:Name="CancelButton" Content="Cancel" Style="{StaticResource SecondaryButton}"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
