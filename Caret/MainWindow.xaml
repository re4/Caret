<Window x:Class="Caret.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="new 1 - Caret"
        Icon="Icon.png"
        Height="800" Width="1200"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="#CCCCCC"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Grid>
    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="#2D2D30" Foreground="#CCCCCC" Padding="0,1">

            <MenuItem Header="_File">
                <MenuItem Header="_New" InputGestureText="Ctrl+N" Click="New_Click"/>
                <MenuItem Header="_Open..." InputGestureText="Ctrl+O" Click="Open_Click"/>
                <Separator/>
                <MenuItem Header="_Save" InputGestureText="Ctrl+S" Click="Save_Click"/>
                <MenuItem Header="Save _As..." InputGestureText="Ctrl+Shift+S" Click="SaveAs_Click"/>
                <MenuItem Header="Save A_ll" Click="SaveAll_Click"/>
                <Separator/>
                <MenuItem Header="_Close" InputGestureText="Ctrl+W" Click="Close_Click"/>
                <MenuItem Header="Clos_e All" Click="CloseAll_Click"/>
                <Separator/>
                <MenuItem Header="_Print..." InputGestureText="Ctrl+P" Click="Print_Click"/>
                <Separator/>
                <MenuItem x:Name="RecentFilesMenu" Header="Recent Files">
                    <MenuItem Header="(empty)" IsEnabled="False"/>
                </MenuItem>
                <MenuItem Header="Clear Recent Files List" Click="ClearRecentFiles_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" InputGestureText="Alt+F4" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" InputGestureText="Ctrl+Z" Click="Undo_Click"/>
                <MenuItem Header="_Redo" InputGestureText="Ctrl+Y" Click="Redo_Click"/>
                <Separator/>
                <MenuItem Header="Cu_t" InputGestureText="Ctrl+X" Click="Cut_Click"/>
                <MenuItem Header="_Copy" InputGestureText="Ctrl+C" Click="Copy_Click"/>
                <MenuItem Header="_Paste" InputGestureText="Ctrl+V" Click="Paste_Click"/>
                <MenuItem Header="_Delete" InputGestureText="Del" Click="Delete_Click"/>
                <Separator/>
                <MenuItem Header="Select _All" InputGestureText="Ctrl+A" Click="SelectAll_Click"/>
                <Separator/>
                <MenuItem Header="Duplicate Current Line" InputGestureText="Ctrl+D" Click="DuplicateLine_Click"/>
                <MenuItem Header="Move Line Up" InputGestureText="Alt+Up" Click="MoveLineUp_Click"/>
                <MenuItem Header="Move Line Down" InputGestureText="Alt+Down" Click="MoveLineDown_Click"/>
                <Separator/>
                <MenuItem Header="Toggle Comment" InputGestureText="Ctrl+/" Click="ToggleComment_Click"/>
                <Separator/>
                <MenuItem Header="UPPERCASE" InputGestureText="Ctrl+Shift+U" Click="ToUpperCase_Click"/>
                <MenuItem Header="lowercase" InputGestureText="Ctrl+U" Click="ToLowerCase_Click"/>
                <Separator/>
                <MenuItem Header="Trim Trailing Space" Click="TrimTrailingSpace_Click"/>
                <MenuItem Header="TAB to Space" Click="TabToSpace_Click"/>
                <MenuItem Header="Space to TAB" Click="SpaceToTab_Click"/>
            </MenuItem>

            <MenuItem Header="_Search">
                <MenuItem Header="_Find..." InputGestureText="Ctrl+F" Click="Find_Click"/>
                <MenuItem Header="Find _Next" InputGestureText="F3" Click="FindNext_Click"/>
                <MenuItem Header="Find _Previous" InputGestureText="Shift+F3" Click="FindPrevious_Click"/>
                <MenuItem Header="_Replace..." InputGestureText="Ctrl+H" Click="Replace_Click"/>
                <Separator/>
                <MenuItem Header="_Go to Line..." InputGestureText="Ctrl+G" Click="GoToLine_Click"/>
            </MenuItem>

            <MenuItem Header="_View">
                <MenuItem x:Name="AlwaysOnTopMenu" Header="Always on _Top" IsCheckable="True" 
                          Click="AlwaysOnTop_Click"/>
                <Separator/>
                <MenuItem x:Name="WordWrapMenu" Header="_Word Wrap" IsCheckable="True"
                          Click="WordWrap_Click"/>
                <MenuItem x:Name="ShowWhiteSpaceMenu" Header="Show White Space &amp; TAB" IsCheckable="True"
                          Click="ShowWhiteSpace_Click"/>
                <MenuItem x:Name="ShowEndOfLineMenu" Header="Show End of Line" IsCheckable="True"
                          Click="ShowEndOfLine_Click"/>
                <MenuItem x:Name="ShowLineNumbersMenu" Header="Show _Line Numbers" IsCheckable="True" IsChecked="True"
                          Click="ShowLineNumbers_Click"/>
                <MenuItem x:Name="ShowIndentGuideMenu" Header="Show Indent Guide" IsCheckable="True" IsChecked="True"
                          Click="ShowIndentGuide_Click"/>
                <Separator/>
                <MenuItem Header="Zoom _In" InputGestureText="Ctrl++" Click="ZoomIn_Click"/>
                <MenuItem Header="Zoom _Out" InputGestureText="Ctrl+-" Click="ZoomOut_Click"/>
                <MenuItem Header="_Restore Default Zoom" InputGestureText="Ctrl+0" Click="ResetZoom_Click"/>
                <Separator/>
                <MenuItem Header="_Fold All" Click="FoldAll_Click"/>
                <MenuItem Header="_Unfold All" Click="UnfoldAll_Click"/>
            </MenuItem>

            <MenuItem Header="E_ncoding">
                <MenuItem x:Name="EncodingAnsi" Header="ANSI" Click="Encoding_Click" Tag="ANSI"/>
                <MenuItem x:Name="EncodingUtf8" Header="UTF-8" Click="Encoding_Click" Tag="UTF-8" />
                <MenuItem x:Name="EncodingUtf8Bom" Header="UTF-8-BOM" Click="Encoding_Click" Tag="UTF-8-BOM"/>
                <MenuItem x:Name="EncodingUtf16Le" Header="UCS-2 LE BOM" Click="Encoding_Click" Tag="UTF-16LE"/>
                <MenuItem x:Name="EncodingUtf16Be" Header="UCS-2 BE BOM" Click="Encoding_Click" Tag="UTF-16BE"/>
            </MenuItem>

            <MenuItem x:Name="LanguageMenu" Header="_Language">
                <MenuItem Header="Normal Text" Click="Language_Click" Tag="" IsChecked="True"/>
            </MenuItem>

            <MenuItem Header="_Help">
                <MenuItem Header="Check for _Updates..." Click="CheckForUpdates_Click"/>
                <Separator/>
                <MenuItem Header="_About Caret" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <StatusBar DockPanel.Dock="Bottom" Background="#007ACC" Foreground="White" Padding="0">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0">
                <TextBlock x:Name="StatusPosition" Text="Ln: 1, Col: 1" Foreground="White" FontSize="12"/>
            </StatusBarItem>

            <Separator Grid.Column="1" Background="#1C97EA" Width="1" Margin="4,2"/>

            <StatusBarItem Grid.Column="2">
                <TextBlock x:Name="StatusSelection" Text="" Foreground="White" FontSize="12"/>
            </StatusBarItem>

            <Separator Grid.Column="3" Background="#1C97EA" Width="1" Margin="4,2"/>

            <StatusBarItem Grid.Column="4" Cursor="Hand" MouseDoubleClick="StatusLanguage_DoubleClick">
                <TextBlock x:Name="StatusLanguage" Text="Normal Text" Foreground="White" FontSize="12"
                           ToolTip="Double-click to change language"/>
            </StatusBarItem>

            <Separator Grid.Column="5" Background="#1C97EA" Width="1" Margin="4,2"/>

            <StatusBarItem Grid.Column="6">
                <TextBlock x:Name="StatusEncoding" Text="UTF-8" Foreground="White" FontSize="12"/>
            </StatusBarItem>

            <Separator Grid.Column="7" Background="#1C97EA" Width="1" Margin="4,2"/>

            <StatusBarItem Grid.Column="8">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="StatusLineEnding" Text="Windows (CR LF)" Foreground="White" FontSize="12" Margin="0,0,12,0"/>
                    <TextBlock x:Name="StatusZoom" Text="100%" Foreground="White" FontSize="12" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusFileInfo" Text="" Foreground="White" FontSize="12"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <TabControl x:Name="TabDocuments" 
                    Background="#1E1E1E" 
                    BorderThickness="0"
                    Padding="0"
                    SelectionChanged="TabDocuments_SelectionChanged">
        </TabControl>
    </DockPanel>

    <Border x:Name="LoadingOverlay" Visibility="Collapsed" Background="#CC1E1E1E"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ProgressBar x:Name="LoadingProgress" IsIndeterminate="True"
                         Width="300" Height="6" Foreground="#007ACC"
                         Background="#333333" BorderThickness="0"/>
            <TextBlock x:Name="LoadingText" Text="Opening file..."
                       Foreground="#CCCCCC" FontSize="14"
                       HorizontalAlignment="Center" Margin="0,12,0,0"/>
        </StackPanel>
    </Border>
    </Grid>
</Window>
